@model List<Empleado>

@{
    ViewData["Title"] = "PaginarGrupoEmpleados";
}

@{
    int numeroRegistros = (int)ViewData["REGISTROS"];
    int numPagina = 1;
}

<h1>Paginar Grupo Empleados</h1>

<ul class="list-group list-group-horizontal">
    @for(int i = 1; i <= numeroRegistros; i+= 3){
        <li class="list-group-item list-group-item-warning">
            <a asp-controller="Paginacion"
               asp-action="PaginarGrupoEmpleados"
            asp-route-posicion="@i">
                @numPagina
            </a>
        </li>
        numPagina += 1;
    }
</ul>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                ID EMPLEADO
            </th>
            <th>
                APELLIDO
            </th>
            <th>
                OFICIO
            </th>
            <th>
                SALARIO
            </th>
            <th>
                ID DEPARTAMENTO
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdEmpleado</td>
                <td>@item.Apellido</td>
                <td>@item.Salario</td>
                <td>@item.Oficio</td>
                <td>@item.IdDepartamento</td>
            </tr>
        }
    </tbody>
</table>
